const currencyCodeRepo = require('../repo/currencyCodeRepo');

class CurrencyCodeController {

    async getAllCurrencyCodes(req, res) {
        try {
            const currencyCodes = await currencyCodeRepo.getAllCurrencyCodes();
            res.status(200).json(currencyCodes);
        } catch (err) {
            res.status(500).json(err);
        }
    }

    async getCurrencyCodeById(req, res) {
        try {
            const id = req.params.id;
            const currencyCode = await currencyCodeRepo.getCurrencyCodeById(id);
            res.status(200).json(currencyCode);
        } catch (err) {
            res.status(500).json(err);
        }
    }

    async createCurrencyCode(req, res) {
        try {
            const currencyCode = req.body.currencyCode;
            const name = req.body.name;
            const currencyCodeObj = await currencyCodeRepo.createCurrencyCode(currencyCode, name);
            res.status(200).json(currencyCodeObj);
        } catch (err) {
            res.status(500).json(err);
        }
    }

    async updateCurrencyCode(req, res) {
        try {
            const id = req.params.id;
            const currencyCode = req.body.currencyCode;
            const name = req.body.name;
            const currencyCodeObj = await currencyCodeRepo.updateCurrencyCode(id, currencyCode, name);
            res.status(200).json(currencyCodeObj);
        } catch (err) {
            res.status(500).json(err);
        }
    }

    async deleteCurrencyCode(req, res) {
        try {
            const id = req.params.id;
            const currencyCodeObj = await currencyCodeRepo.deleteCurrencyCode(id);
            res.status(200).json(currencyCodeObj);
        } catch (err) {
            res.status(500).json(err);
        }
    }
}

module.exports = new CurrencyCodeController();